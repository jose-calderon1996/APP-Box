const express = require('express');
const router = express.Router();
const db = require('../db');

// üì° Ruta para probar la conexi√≥n a la base de datos
router.get('/test-db', async (req, res) => {
  try {
    const [rows] = await db.query('SELECT NOW() AS fecha');
    res.json({ message: '‚úÖ Conexi√≥n exitosa a la base de datos', fecha: rows[0].fecha });
  } catch (error) {
    console.error('‚ùå Error en test-db:', error);
    res.status(500).json({ error: '‚ùå No se pudo conectar a la base de datos', detalle: error.message });
  }
});

module.exports = router;
